@{
    Layout = "";
}
@model Barinak_Sistemi.Models.User
  

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Barinak_Sistemi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Barinak_Sistemi.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
   
    <div class="container">
        
          <div class="baslik">
            <h1>Barınak Sistemi</h1>
            <p>Barınak Sistemine hoşgeldiniz! daha önce bir hesap oluşturduysanız lütfen giriş yapınız eğer hesabınız yoksa yeni bir hesap oluşturunuz.</p>
          </div>
  

        <main role="main" class="pb-3">
            <div class="content">
				<form class="form"  asp-action="Index" method="post">
					<div class=" loginContainer ">
						<!-- kullanıcı giriş kısmı -->
						<h1 class="text-center">Giriş Yap</h1><br />
						<div>
							<div class="mb-3">
								<label asp-for="userEmail" class="form-label">E-Posta</label>
								<input asp-for="userEmail" name="userEmail" type="email" class="form-control" id="InputEmail1" aria-describedby="emailHelp">
								<span asp-validation-for="userEmail"></span>
							</div>
							<div class="mb-3">
								<label asp-for="password" class="form-label">Şifre</label>
								<input asp-for="password" type="password" class="form-control" id="InputPassword1">
								<span asp-validation-for="password"></span>
							</div>
							<div class="buttonContainer">

								<button type="submit" class="btn btn-dark">Login</button>


							</div>
							
							
						</div>
						<!--kullanıcı yanlış bilgi girerse alert çıkar -->
						@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
						{
							<div class="alert alert-danger mt-2 " role="alert">
								@ViewBag.ErrorMessage
							</div>

						}

					</div>
				</form>
				

				<form asp-controller="Login" class="form" asp-action="Register" method="post">
					<div class="registerContainer">
						<!-- kullanıcı kayıt olma kısmı -->
						<h1 class="text-center">Kayıt Ol</h1><br />
						<div>
							<div class="mb-3">
								<label asp-for="userName" class="form-label">Adı</label>
								<input asp-for="userName" name="userName" type="text" class="form-control" id="InputName">
								<span asp-validation-for="userName"></span>
							</div>
							<div class="mb-3">
								<label asp-for="userLastName" class="form-label">Soyadı</label>
								<input asp-for="userLastName" name="userLastName" type="lastName" class="form-control" id="InputLastName">
								<span asp-validation-for="userLastName"></span>
							</div>
							<div class="mb-3">
								<label asp-for="userEmail" class="form-label">E-Posta</label>
								<input asp-for="userEmail" name="userEmail" type="email" class="form-control" id="InputEmail2" aria-describedby="emailHelp">
								<span asp-validation-for="userEmail"></span>
							</div>
							<div class="mb-3">
								<label asp-for="userPhoneNumber" class="form-label">Telefon Numarası</label>
								<input asp-for="userPhoneNumber" name="userPhoneNumber" type="number" class="form-control" id="InputPhoneNumber" >
								<span asp-validation-for="userPhoneNumber"></span>
							</div>
							<div class="mb-3">
								<label asp-for="password" class="form-label">Şifre</label>
								<input asp-for="password" name="password" type="password" class="form-control" id="InputPassword2">
								<span asp-validation-for="password"></span>
							</div>
							<div class="buttonContainer">



								<button type="submit" class="btn btn-dark">Sign Up</button>
							</div>
						</div>
						<!--kullanıcı kayıt olursa alert çıkar -->
						@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
						{
							<div class="alert alert-success mt-2 " role="alert">
								@ViewBag.SuccessMessage
							</div>

						}

					</div>
					
				</form>
            </div>
            
            
            
        </main>
    </div>
    <!-- Remove the container if you want to extend the Footer to full width. -->
    

        <footer class="text-center text-white footer">
           
            <!-- Grid container -->
            <!-- Copyright -->
            <div class="text-center text-white p-3">
                © @DateTime.Now.Year Barınak Sistemi  - Tüm Hakları Saklıdır
               
            </div>
            <!-- Copyright -->
        </footer>

    
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>




